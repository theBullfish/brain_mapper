{
  "name": "bear-poking",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @bear-poking/web dev\" \"pnpm --filter @bear-poking/api dev\"",
    "build": "pnpm --parallel --filter ./apps/* build",
    "lint": "echo 'add linter later'"
  },
  "devDependencies": {
    "@prisma/client": "6.11.1",
    "@types/node": "^20.19.7",
    "concurrently": "^8.2.0",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^17.2.0"
  }
}